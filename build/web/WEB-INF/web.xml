<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>Saludo</servlet-name>
        <servlet-class>servlets.Saludo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Redirecciona</servlet-name>
        <servlet-class>servlets.Redirecciona</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Responde</servlet-name>
        <servlet-class>servlets.Responde</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Saludo</servlet-name>
        <url-pattern>/saludo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Redirecciona</servlet-name>
        <url-pattern>/redirecciona</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Responde</servlet-name>
        <url-pattern>/responde</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
